{
  "compileOnSave": true,
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "esModuleInterop": true
    }
  },
  "compilerOptions": {
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "classnameTransform": "dashes",
          "customMatcher": "\\.css$"
        }
      }
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["ES2022", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "./dist",
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES6",
    "typeRoots": ["./node_modules/@types", "./typings"],
    "paths": {
      "__mocks__/*": ["./__mocks__/*"],
      "api/*": ["./api/*"],
      "assets/*": ["./assets/*"],
      "components/*": ["./components/*"],
      "config/*": ["./config/*"],
      "modules/*": ["./modules/*"],
      "pages/*": ["./pages/*"],
      "typings/*": ["./typings/*"],
      "tests/*": ["./tests/*"],
      "utils/*": ["./utils/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "webpack/**/*.ts",
    "./jest-setup.ts"
  ],
  "exclude": ["node_modules", "build"]
}
